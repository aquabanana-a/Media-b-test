<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:id="@+id/v_root">

    <RelativeLayout android:id="@+id/vg_surface"
                    android:layout_width="180dp"
                    android:layout_height="320dp"
                    android:background="#FFFFFF"
                    android:layout_centerHorizontal="true">

        <com.dobranos.instories.view.base.ui.widget.ContentHolderWidget android:id="@+id/chv_first"
                                                                        android:layout_width="5dp"
                                                                        android:layout_height="10dp"
                                                                        android:layout_alignParentTop="true"
                                                                        android:layout_alignParentRight="true"/>

        <com.dobranos.instories.view.base.ui.widget.ContentHolderWidget android:id="@+id/chv_second"
                                                                        android:layout_width="3dp"
                                                                        android:layout_height="5dp"
                                                                        android:layout_marginBottom="1dp"
                                                                        android:layout_above="@id/chv_third"
                                                                        android:layout_alignParentLeft="true"/>

        <com.dobranos.instories.view.base.ui.widget.ContentHolderWidget android:id="@+id/chv_third"
                                                                        android:layout_width="3dp"
                                                                        android:layout_height="4dp"
                                                                        android:layout_alignParentBottom="true"
                                                                        android:layout_alignParentLeft="true"/>

        <ImageView android:id="@+id/iv_export"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:layout_margin="4dp"
                   android:padding="4dp"
                   android:tint="#686868"
                   android:layout_gravity="right|top"
                   android:contentDescription="@null"
                   android:background="@drawable/selector_white_45_to_primary"
                   android:src="@drawable/ic_export_512"/>

    </RelativeLayout>

</RelativeLayout>